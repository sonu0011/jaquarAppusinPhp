<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_design">
    <ImageView
        android:id="@+id/subcategoryImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Comes Here"
        android:textSize="17sp"
        android:fontFamily="@font/custom_font"
        android:textStyle="bold"
        android:id="@+id/subcategoryTitle"
        android:layout_marginTop="13dp"
        android:textColor="#b0667fb6"
        android:layout_toRightOf="@+id/subcategoryImage"
        android:layout_alignTop="@+id/subcategoryImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subcategoryTitle"
        android:layout_toRightOf="@+id/subcategoryImage"
        android:text="View More"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:fontFamily="@font/custom_font"
        android:id="@+id/subcategoryViewMore"
        android:layout_marginLeft="2dp"
        android:textSize="16dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_toRightOf="@+id/subcategoryViewMore"
        android:layout_alignTop="@+id/subcategoryViewMore"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>